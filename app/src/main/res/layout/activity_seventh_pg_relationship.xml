<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seventh_Pg_relationship"
    android:background="@color/bg"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"

        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/text1">

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:text="Excited to know more about you!"
            android:textColor="#0E0E0E"
            android:textSize="16sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"

            android:text="Play"
            android:textSize="16sp"
            android:backgroundTint="@color/dark_green"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/text1"
        app:layout_constraintBottom_toTopOf="@id/text2"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundTint="#121111"
        android:padding="5dp"
        android:text="What's your relationship status? ❤"
        android:textColor="#121111"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:text="Not us, the regulators want to  know your status"
        android:textColor="#0E0E0E"

        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/single"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:text="Single"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:elevation="32dp"
        app:layout_constraintBottom_toTopOf="@id/divorced"
        app:layout_constraintEnd_toStartOf="@id/married"

        android:textColor="@color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/married"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:text="Married"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:elevation="32dp"
        app:layout_constraintBottom_toTopOf="@id/widowd"
        app:layout_constraintEnd_toEndOf="parent"

        android:textColor="@color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/divorced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:text="Divorced"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:elevation="32dp"
        app:layout_constraintBottom_toTopOf="@id/bottom"
        app:layout_constraintEnd_toStartOf="@id/widowd"

        android:textColor="@color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/widowd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:text="widowed"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:elevation="32dp"
        app:layout_constraintBottom_toTopOf="@id/bottom"
        app:layout_constraintEnd_toEndOf="parent"

        android:textColor="@color/black"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/voiceBtn1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"

        android:background="#f6f5f0"
        android:contentDescription="mic1"


        android:elevation="8dp"

        android:visibility="visible"
        app:tint="@color/dark_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2"
        app:srcCompat="@drawable/ic_action_name" />

    <TextView
        android:id="@+id/bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="32dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>