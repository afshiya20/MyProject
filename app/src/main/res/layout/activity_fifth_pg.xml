<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fifth_pg"
    android:background="@color/bg"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toTopOf="@id/text1"
        >

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:text="You're almost there"
            android:textStyle="italic"
            android:textColor="#0E0E0E"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/dark_green"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/text1"
        app:layout_constraintBottom_toTopOf="@id/text2"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundTint="#121111"
        android:padding="5dp"
        android:text="Provide PAN number ðŸ’³"
        android:textColor="#121111"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:text="Ensure correct number is shared. You won't be able to change later"
        app:layout_constraintBottom_toTopOf="@id/l1"

        android:textColor="#0E0E0E"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/bottom">

        <EditText
            android:id="@+id/pan"
            app:layout_constraintBottom_toTopOf="@id/bottom"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Enter PAN number"
            android:background="@color/white"
            android:padding="5dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:elevation="8dp"

            />
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="â–¶"
            app:tint="@color/dark_green"
            android:textColor="@color/white"

            android:backgroundTint="@color/dark_green"
            />


    </LinearLayout>


    <Button
        android:id="@+id/bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Complete Profile"
        android:backgroundTint="#069e9f"
        android:layout_marginBottom="10dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>