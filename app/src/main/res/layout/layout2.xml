<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".secondpg">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="5dp"
        android:layout_marginTop="350dp"
        android:text="Let's get started!"
        android:textSize="24sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:text="Could you tell me your name?"
        android:padding="5dp"
        android:textColor="#070707"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginBottom="15dp"
        android:text="Ensure correct name is being provided.You won't be able to change it later!"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/nameText"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:hint="Full Name"
            android:inputType="text"
            android:padding="5dp" />

        <ImageButton
            android:id="@+id/voiceBtn1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="mic1"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_action_name" />

    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#0C7C8A"
        android:padding="10dp"
        android:text="Next" />


</LinearLayout>