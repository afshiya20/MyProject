<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fourth_pg"
    android:background="@color/bg"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"

        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/text1">

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:text="Great!"
            android:textColor="#0E0E0E"
            android:textSize="16sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/gray"
            android:text="Play"
            android:textSize="16sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/text1"
        app:layout_constraintBottom_toTopOf="@id/text2"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundTint="#121111"
        android:padding="5dp"
        android:text="What's your employment type? ðŸ‘”"
        android:textColor="#121111"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:text="How are you utilizing your time?"
        android:textColor="#0E0E0E"

        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/salaried"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/salaried"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:text="Salaried"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:elevation="32dp"
        app:layout_constraintBottom_toTopOf="@id/student"
        app:layout_constraintEnd_toStartOf="@id/self"

        android:textColor="@color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:text="Self-employed"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:elevation="32dp"
        app:layout_constraintBottom_toTopOf="@id/other"
        app:layout_constraintEnd_toEndOf="parent"

        android:textColor="@color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:text="Student"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:elevation="32dp"
        app:layout_constraintBottom_toTopOf="@id/bottom"
        app:layout_constraintEnd_toStartOf="@id/other"

        android:textColor="@color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:text="other"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:elevation="32dp"
        app:layout_constraintBottom_toTopOf="@id/bottom"
        app:layout_constraintEnd_toEndOf="parent"

        android:textColor="@color/black"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/voiceBtn1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"

        android:background="#f6f5f0"
        android:contentDescription="mic1"


        android:elevation="8dp"

        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2"
        app:srcCompat="@drawable/ic_action_name" />

    <TextView
        android:id="@+id/bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="32dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>